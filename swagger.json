{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "puzzle-games-api",
    "contact": {
      "email": "nogakamil@vp.pl"
    },
    "license": {
      "name": "Repo",
      "url": "https://github.com/Karmello/puzzle-games-api"
    }
  },
  "basePath": "/",
  "tags": [
    {
      "name": "[users]",
      "description": "Read-write collection",
      "externalDocs": {
        "description": "Code",
        "url": "https://github.com/Karmello/puzzle-games-api/blob/master/routes/users.js"
      }
    },
    {
      "name": "[game-categories]",
      "description": "Read-only collection",
      "externalDocs": {
        "description": "Code",
        "url": "https://github.com/Karmello/puzzle-games-api/blob/master/routes/game-categories.js"
      }
    },
    {
      "name": "[games]",
      "description": "Read-only collection",
      "externalDocs": {
        "description": "Code",
        "url": "https://github.com/Karmello/puzzle-games-api/blob/master/routes/games.js"
      }
    },
    {
      "name": "[highscores]",
      "description": "Read-write collection",
      "externalDocs": {
        "description": "Code",
        "url": "https://github.com/Karmello/puzzle-games-api/blob/master/routes/highscores.js"
      }
    }
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/users": {
      "get": {
        "tags": ["[users]"],
        "summary": "Get all users",
        "parameters": [
          { "$ref": "#/parameters/x-access-token" }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/users"
          }
        }
      }
    },
    "/user/register": {
      "post": {
        "tags": ["[users]"],
        "summary": "Registers new user",
        "parameters": [
          { "$ref": "#/parameters/credentials" }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/user"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": ["[users]"],
        "summary": "Tries to login with either credentials or authentication token",
        "parameters": [
          { "$ref": "#/parameters/credentials" },
          { "$ref": "#/parameters/credentials2" }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/user"
          }
        }
      }
    },
    "/game-categories": {
      "get": {
        "tags": ["[game-categories]"],
        "summary": "Get all game categories",
        "parameters": [
          { "$ref": "#/parameters/x-access-token" }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/game-categories"
          }
        }
      }
    },
    "/games": {
      "get": {
        "tags": ["[games]"],
        "summary": "Get all games",
        "parameters": [
          { "$ref": "#/parameters/x-access-token" }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/games"
          }
        }
      }
    },
    "/highscore": {
      "post": {
        "tags": ["[highscores]"],
        "summary": "Save new highscore",
        "description": "Checks if result is new highscore and if yes, saves it",
        "parameters": [
          { "$ref": "#/parameters/x-access-token" },
          {
            "name": "New highscore",
            "in": "body",
            "description": "New highscore body which is about to be saved",
            "required": true,
            "schema": {
              "$ref": "#/requestBody/highscore"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/highscore"
          }
        }
      }
    },
    "/highscores/{gameId}": {
      "get": {
        "tags": ["[highscores]"],
        "summary": "Get highscores by gameId",
        "description": "Gets all highscores for the game specified by id",
        "parameters": [
          { "$ref": "#/parameters/x-access-token" },
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "description": "ID of the game you want to get results for",
            "type": "string"
          },
          {
            "name": "mode",
            "in": "query",
            "description": "Game mode",
            "type": "string"
          },
          {
            "name": "dimension",
            "in": "query",
            "description": "Game dimension",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/highscores"
          }
        }
      }
    }
  },
  "definitions": [
    { "$ref": "#/schemas/User" },
    { "$ref": "#/schemas/Game" },
    { "$ref": "#/schemas/GameCategory" },
    { "$ref": "#/schemas/Highscore" }
  ],
  "schemas": {
    "User": {
      "title": "User",
      "required": ["_id", "registeredAt", "username", "password"],
      "properties": {
        "_id": {
          "$ref": "#/schemas/userId"
        },
        "registeredAt": {
          "type": "string",
          "format": "date-time"
        },
        "username": {
          "type": "string",
          "unique": true
        },
        "password": {
          "type": "string"
        }
      }
    },
    "User-no-password": {
      "title": "User",
      "required": ["_id", "registeredAt", "username"],
      "properties": {
        "_id": {
          "$ref": "#/schemas/userId"
        },
        "registeredAt": {
          "type": "string",
          "format": "date-time"
        },
        "username": {
          "type": "string",
          "unique": true
        }
      }
    },
    "GameCategory": {
      "title": "GameCategory",
      "required": ["_id", "id", "name"],
      "properties": {
        "_id": {
          "$ref": "#/schemas/gameCategoryId"
        },
        "id": {
          "type": "string",
          "unique": true
        },
        "name": {
          "type": "string",
          "unique": true
        }
      }
    },
    "Game": {
      "title": "Game",
      "required": ["_id", "id", "name", "category"],
      "properties": {
        "_id": {
          "$ref": "#/schemas/gameId"
        },
        "id": {
          "type": "string",
          "unique": true
        },
        "name": {
          "type": "string",
          "unique": true
        },
        "category": {
          "$ref": "#/schemas/gameCategoryId"
        },
        "description": {
          "type": "string"
        },
        "options": {
          "$ref": "#/schemas/gameOptions"
        }
      }
    },
    "Highscore": {
      "title": "Highscore",
      "required": ["_id", "date", "username", "gameId", "options", "details"],
      "properties": {
        "_id": {
          "$ref": "#/schemas/highscoreId"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "username": {
          "type": "string"
        },
        "gameId": {
          "type": "string"
        },
        "options": {
          "$ref": "#/schemas/gameOptions"
        },
        "details": {
          "$ref": "#/schemas/highscoreDetails"
        }
      }
    },
    "userId": {
      "type": "string",
      "format": "byte",
      "unique": true
    },
    "gameId": {
      "type": "string",
      "format": "byte",
      "unique": true
    },
    "gameCategoryId": {
      "type": "string",
      "format": "byte",
      "unique": true
    },
    "gameOptions": {
      "type": "object",
      "properties": {
        "mode": { "type": "string" },
        "dimension": { "type": "string" }
      }
    },
    "highscoreId": {
      "type": "string",
      "format": "byte",
      "unique": true
    },
    "highscoreDetails": {
      "type": "object",
      "required": ["moves", "seconds"],
      "properties": {
        "moves": {
          "type": "number",
          "format": "int32"
        },
        "seconds": {
          "type": "number",
          "format": "int32"
        }
      }
    }
  },
  "parameters": {
    "credentials": {
      "name": "Credentials",
      "in": "body",
      "required": true,
      "description": "Username and password",
      "schema": {
        "title": "Credentials",
        "required": ["username", "password"],
        "properties": {
          "username": {
            "type": "string",
            "unique": true
          },
          "password": {
            "type": "string"
          }
        }
      }
    },
    "credentials2": {
      "name": "Authentication token",
      "in": "body",
      "description": "Token received during registration",
      "schema": {
        "title": "Authentication token",
        "required": ["x-access-token"],
        "properties": {
          "x-access-token": {
            "type": "string"
          }
        }
      },
      "required": true
    },
    "x-access-token": {
      "name": "Authentication token",
      "in": "headers",
      "description": "Token received during registration",
      "required": true
    }
  },
  "requestBody": {
    "highscore": {
      "required": ["userId", "gameId", "options", "details"],
      "properties": {
        "userId": {
          "$ref": "#/schemas/userId"
        },
        "gameId": {
          "$ref": "#/schemas/gameId"
        },
        "options": {
          "$ref": "#/schemas/gameOptions"
        },
        "details": {
          "$ref": "#/schemas/highscoreDetails"
        }
      }
    }
  },
  "responses": {
    "user": {
      "description": "User object with no password",
      "schema": {
        "$ref": "#/schemas/User-no-password"
      }
    },
    "users": {
      "description": "An array of user objects with no password",
      "schema": {
        "type": "array",
        "items": {
          "$ref": "#/schemas/User-no-password"
        }
      }
    },
    "game-categories": {
      "description": "An array of game-category objects",
      "schema": {
        "type": "array",
        "items": {
          "$ref": "#/schemas/GameCategory"
        }
      }
    },
    "games": {
      "description": "An array of game objects",
      "schema": {
        "type": "array",
        "items": {
          "$ref": "#/schemas/Game"
        }
      }
    },
    "highscore": {
      "description": "Highscore object",
      "schema": {
        "$ref": "#/schemas/Highscore"
      }
    },
    "highscores": {
      "description": "An array of highscore objects",
      "schema": {
        "type": "array",
        "items": {
          "$ref": "#/schemas/Highscore"
        }
      }
    }
  }
}