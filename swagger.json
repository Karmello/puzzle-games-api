{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "puzzle-games-api",
    "contact": {
      "email": "nogakamil@vp.pl"
    },
    "license": {
      "name": "Repo",
      "url": "https://github.com/Karmello/puzzle-games-api"
    }
  },
  "basePath": "/",
  "tags": [
    {
      "name": "[game-categories]",
      "description": "read-only collection",
      "externalDocs": {
        "description": "code",
        "url": "https://github.com/Karmello/puzzle-games-api/blob/master/routes/game-categories.js"
      }
    },
    {
      "name": "[games]",
      "description": "read-only collection",
      "externalDocs": {
        "description": "code",
        "url": "https://github.com/Karmello/puzzle-games-api/blob/master/routes/games.js"
      }
    },
    {
      "name": "[users]",
      "description": "read-write collection",
      "externalDocs": {
        "description": "code",
        "url": "https://github.com/Karmello/puzzle-games-api/blob/master/routes/users.js"
      }
    },
    {
      "name": "[highscores]",
      "description": "read-write collection",
      "externalDocs": {
        "description": "code",
        "url": "https://github.com/Karmello/puzzle-games-api/blob/master/routes/highscores.js"
      }
    }
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/game-categories": {
      "get": {
        "tags": ["[game-categories]"],
        "summary": "gets all game categories",
        "parameters": [
          { "$ref": "#/parameters/x-access-token" }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/game-categories"
          },
          "401": {
            "$ref": "#/responses/unauthorized"
          }
        }
      }
    },
    "/games": {
      "get": {
        "tags": ["[games]"],
        "summary": "gets all games",
        "parameters": [
          { "$ref": "#/parameters/x-access-token" }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/games"
          },
          "401": {
            "$ref": "#/responses/unauthorized"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["[users]"],
        "summary": "gets all users",
        "parameters": [
          { "$ref": "#/parameters/x-access-token" }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/users"
          },
          "401": {
            "$ref": "#/responses/unauthorized"
          }
        }
      }
    },
    "/user/register": {
      "post": {
        "tags": ["[users]"],
        "summary": "registers new user",
        "parameters": [
          { "$ref": "#/parameters/credentials" }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "authentication token and user object (no password)",
            "schema": {
              "$ref": "#/schemas/authenticationResponse"
            }
          },
          "400": {
            "description": "Validation failed"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": ["[users]"],
        "summary": "tries to login with either credentials or authentication token",
        "parameters": [
          { "$ref": "#/parameters/credentials2" }
        ],
        "responses": {
          "200": {
            "description": "authentication token (if logged in with username and password) and user object (no password)",
            "schema": {
              "$ref": "#/schemas/authenticationResponse"
            }
          },
          "400": {
            "$ref": "#/responses/wrongCredentials"
          }
        }
      }
    },
    "/highscore": {
      "post": {
        "tags": ["[highscores]"],
        "summary": "saves new highscore",
        "description": "checks if new result can be saved as highscore and if yes, does that",
        "parameters": [
          { "$ref": "#/parameters/x-access-token" },
          { "$ref": "#/parameters/highscore" }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/highscore"
          },
          "204": {
            "description": "new result is not good enough to be saved on highscores list"
          },
          "401": {
            "$ref": "#/responses/unauthorized"
          }
        }
      }
    },
    "/highscores/{gameId}": {
      "get": {
        "tags": ["[highscores]"],
        "summary": "gets highscores by gameId",
        "parameters": [
          { "$ref": "#/parameters/x-access-token" },
          { "$ref": "#/parameters/gameId" },
          { "$ref": "#/parameters/gameMode" },
          { "$ref": "#/parameters/gameDimension" }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/highscores"
          },
          "401": {
            "$ref": "#/responses/unauthorized"
          }
        }
      }
    },
    "/highscore/{gameId}": {
      "get": {
        "tags": ["[highscores]"],
        "summary": "gets the best highscore by gameId",
        "parameters": [
          { "$ref": "#/parameters/x-access-token" },
          { "$ref": "#/parameters/gameId" },
          { "$ref": "#/parameters/gameMode" },
          { "$ref": "#/parameters/gameDimension" }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/highscores"
          },
          "204": {
            "description": "no highscores found"
          },
          "401": {
            "$ref": "#/responses/unauthorized"
          }
        }
      }
    }
  },
  "definitions": [
    { "$ref": "#/schemas/GameCategory" },
    { "$ref": "#/schemas/Game" },
    { "$ref": "#/schemas/User" },
    { "$ref": "#/schemas/Highscore" }
  ],
  "schemas": {
    "User": {
      "title": "User",
      "required": ["_id", "registeredAt", "username", "password"],
      "properties": {
        "_id": {
          "$ref": "#/schemas/userId"
        },
        "registeredAt": {
          "type": "string",
          "format": "date-time"
        },
        "username": {
          "$ref": "#/schemas/username"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "User-no-password": {
      "title": "User",
      "required": ["_id", "registeredAt", "username"],
      "properties": {
        "_id": {
          "$ref": "#/schemas/userId"
        },
        "registeredAt": {
          "type": "string",
          "format": "date-time"
        },
        "username": {
          "$ref": "#/schemas/username"
        }
      }
    },
    "GameCategory": {
      "title": "GameCategory",
      "required": ["_id", "id", "name"],
      "properties": {
        "_id": {
          "$ref": "#/schemas/gameCategoryId"
        },
        "id": {
          "type": "string",
          "unique": true
        },
        "name": {
          "type": "string",
          "unique": true
        }
      }
    },
    "Game": {
      "title": "Game",
      "required": ["_id", "id", "name", "category", "description", "info"],
      "properties": {
        "_id": {
          "$ref": "#/schemas/gameId"
        },
        "id": {
          "type": "string",
          "unique": true
        },
        "name": {
          "type": "string",
          "unique": true
        },
        "category": {
          "$ref": "#/schemas/gameCategoryId"
        },
        "description": {
          "type": "string"
        },
        "info": {
          "type": "string"
        },
        "options": {
          "$ref": "#/schemas/gameOptions"
        }
      }
    },
    "Highscore": {
      "title": "Highscore",
      "required": ["_id", "date", "username", "gameId", "options", "details"],
      "properties": {
        "_id": {
          "$ref": "#/schemas/highscoreId"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "username": {
          "$ref": "#/schemas/username"
        },
        "gameId": {
          "type": "string"
        },
        "options": {
          "$ref": "#/schemas/gameOptions"
        },
        "details": {
          "$ref": "#/schemas/highscoreDetails"
        }
      }
    },
    "userId": {
      "type": "string",
      "format": "byte",
      "unique": true
    },
    "username": {
      "type": "string",
      "unique": true
    },
    "gameId": {
      "type": "string",
      "format": "byte",
      "unique": true
    },
    "gameCategoryId": {
      "type": "string",
      "format": "byte",
      "unique": true
    },
    "gameOptions": {
      "type": "object",
      "properties": {
        "mode": { "type": "string" },
        "dimension": { "type": "string" }
      }
    },
    "highscoreId": {
      "type": "string",
      "format": "byte",
      "unique": true
    },
    "highscoreDetails": {
      "type": "object",
      "required": ["moves", "seconds"],
      "properties": {
        "moves": {
          "type": "number",
          "format": "int32"
        },
        "seconds": {
          "type": "number",
          "format": "int32"
        }
      }
    },
    "authenticationResponse": {
      "properties": {
        "x-access-token": {
          "$ref": "#/schemas/x-access-token"
        },
        "user": {
          "$ref": "#/schemas/User-no-password"
        }
      }
    },
    "x-access-token": {
      "type": "string"
    }
  },
  "parameters": {
    "credentials": {
      "name": "credentials",
      "in": "body",
      "required": true,
      "description": "username + password",
      "schema": {
        "title": "credentials",
        "properties": {
          "username": {
            "$ref": "#/schemas/username"
          },
          "password": {
            "type": "string"
          }
        }
      }
    },
    "credentials2": {
      "name": "credentials",
      "in": "body",
      "required": true,
      "description": "username + password or authentication token",
      "schema": {
        "title": "credentials",
        "properties": {
          "username": {
            "$ref": "#/schemas/username"
          },
          "password": {
            "type": "string"
          },
          "token": {
            "$ref": "#/schemas/x-access-token"
          }
        }
      }
    },
    "x-access-token": {
      "name": "x-access-token",
      "in": "header",
      "description": "token received during registration",
      "required": true
    },
    "gameId": {
      "name": "gameId",
      "in": "path",
      "required": true,
      "description": "not mongoose _id !",
      "type": "string"
    },
    "gameMode": {
      "name": "mode",
      "in": "query",
      "description": "game mode",
      "type": "string"
    },
    "gameDimension": {
      "name": "dimension",
      "in": "query",
      "description": "game dimension",
      "type": "string"
    },
    "highscore": {
      "name": "highscore",
      "in": "body",
      "description": "new highscore body which is about to be saved",
      "required": true,
      "schema": {
        "$ref": "#/requestBody/highscore"
      }
    }
  },
  "requestBody": {
    "highscore": {
      "required": ["username", "gameId", "options", "details"],
      "properties": {
        "username": {
          "$ref": "#/schemas/username"
        },
        "gameId": {
          "$ref": "#/schemas/gameId"
        },
        "options": {
          "$ref": "#/schemas/gameOptions"
        },
        "details": {
          "$ref": "#/schemas/highscoreDetails"
        }
      }
    }
  },
  "responses": {
    "users": {
      "description": "an array of user objects with no password",
      "schema": {
        "type": "array",
        "items": {
          "$ref": "#/schemas/User-no-password"
        }
      }
    },
    "game-categories": {
      "description": "an array of game-category objects",
      "schema": {
        "type": "array",
        "items": {
          "$ref": "#/schemas/GameCategory"
        }
      }
    },
    "games": {
      "description": "an array of game objects",
      "schema": {
        "type": "array",
        "items": {
          "$ref": "#/schemas/Game"
        }
      }
    },
    "highscore": {
      "description": "highscore object",
      "schema": {
        "$ref": "#/schemas/Highscore"
      }
    },
    "highscores": {
      "description": "an array of highscore objects",
      "schema": {
        "type": "array",
        "items": {
          "$ref": "#/schemas/Highscore"
        }
      }
    },
    "unauthorized": {
      "description": "authorization failure"
    },
    "wrongCredentials": {
      "description": "wrong credentials"
    }
  }
}